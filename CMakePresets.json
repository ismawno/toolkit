{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "TOOLKIT_BUILD_TESTS": "ON",
        "TOOLKIT_BUILD_PERFORMANCE": "ON",
        "TOOLKIT_ENABLE_SYMBOLS": "OFF",
        "TOOLKIT_SANITIZERS": "NONE",
        "TOOLKIT_OPTIMIZATIONS": "NONE",
        "TOOLKIT_ENABLE_LTO": "OFF",

        "TOOLKIT_ENABLE_INFO_LOGS": "OFF",
        "TOOLKIT_ENABLE_WARNING_LOGS": "OFF",
        "TOOLKIT_ENABLE_ASSERTS": "OFF",
        "TOOLKIT_ENABLE_ARENA_ALLOCATOR": "ON",
        "TOOLKIT_ENABLE_BLOCK_ALLOCATOR": "ON",
        "TOOLKIT_ENABLE_STACK_ALLOCATOR": "ON",
        "TOOLKIT_ENABLE_TIER_ALLOCATOR": "ON",
        "TOOLKIT_ENABLE_MULTIPROCESSING": "ON",
        "TOOLKIT_ENABLE_PROFILING": "ON",

        "TOOLKIT_ENABLE_REFLECTION": "ON",
        "TOOLKIT_ENABLE_YAML_SERIALIZATION": "ON",

        "TOOLKIT_ENABLE_INSTRUMENTATION": "OFF",
        "TOOLKIT_ENABLE_VULKAN_INSTRUMENTATION": "OFF",
        "TOOLKIT_ENABLE_SAMPLING": "OFF",
        "TOOLKIT_ENABLE_CALLSTACK": "OFF",
        "TOOLKIT_SAMPLING_RATE": "10000"
      }
    },
    {
      "name": "unix",
      "hidden": true,
      "inherits": "base",
      "generator": "Unix Makefiles",
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows",
      "hidden": true,
      "inherits": "base",
      "generator": "Visual Studio 17 2022",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "debug",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "TOOLKIT_ENABLE_SYMBOLS": "ON",
        "TOOLKIT_OPTIMIZATIONS": "NONE",
        "TOOLKIT_ENABLE_LTO": "OFF",

        "TOOLKIT_ENABLE_INFO_LOGS": "ON",
        "TOOLKIT_ENABLE_WARNING_LOGS": "ON",
        "TOOLKIT_ENABLE_ASSERTS": "ON"
      }
    },
    {
      "name": "release",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "TOOLKIT_ENABLE_SYMBOLS": "OFF",
        "TOOLKIT_OPTIMIZATIONS": "HIGH",
        "TOOLKIT_ENABLE_LTO": "ON",

        "TOOLKIT_ENABLE_INFO_LOGS": "OFF",
        "TOOLKIT_ENABLE_WARNING_LOGS": "OFF",
        "TOOLKIT_ENABLE_ASSERTS": "OFF"
      }
    },
    {
      "name": "unix-debug",
      "inherits": ["unix", "debug"]
    },
    {
      "name": "unix-release",
      "inherits": ["unix", "release"]
    },
    {
      "name": "windows-debug",
      "inherits": ["windows", "debug"]
    },
    {
      "name": "windows-release",
      "inherits": ["windows", "release"]
    }
  ],

  "buildPresets": [
    {
      "name": "base",
      "hidden": true,
      "jobs": 8
    },
    {
      "name": "unix-debug",
      "inherits": "base",
      "configurePreset": "unix-debug"
    },
    {
      "name": "unix-release",
      "inherits": "base",
      "configurePreset": "unix-release"
    },
    {
      "name": "windows-debug",
      "inherits": "base",
      "configurePreset": "windows-debug"
    },
    {
      "name": "windows-release",
      "inherits": "base",
      "configurePreset": "windows-release"
    }
  ],
  "testPresets": [
    {
      "name": "unix-debug",
      "configurePreset": "unix-debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "unix-release",
      "configurePreset": "unix-release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "windows-debug",
      "configurePreset": "windows-debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "windows-release",
      "configurePreset": "windows-release",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
